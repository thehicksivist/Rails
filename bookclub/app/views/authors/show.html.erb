<p id="notice"><%= notice %></p>

<h2><%= link_to 'Home', :root %> |
<%= link_to 'Authors', :authors %> |
<%= link_to 'Books', :books %></h2>

<p>
  <strong>Name:</strong>
  <%= @author.name %>
</p>

<p>
  <strong>Image:</strong>
  <% unless [nil, '']. include?(@author.image) %>
  <% end %>
</p>

<p>
  <strong>Books:</strong>
  
  <% for book in @author.books %>
    <p><%= link_to book.title, book %></p>
  <% end %>
        
</p>
<p>
<%= link_to 'Add Book', new_book_path(:author_id => @author.id) %>
</p>
<%= link_to 'Edit', edit_author_path(@author) %>

